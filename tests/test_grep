#!/bin/bash

REQUIRED_FILE="./ftc"

if [ ! -f ${REQUIRED_FILE} ] 
then
    echo "âš ï¸ Executable ${REQUIRED_FILE} not found."
    exit 1
fi

function test_find_grep () {
    if [ ! "$(./ftc $1 "-ctc" $2)" == "$(grep "-r" $1 $2)" ];
    then
        echo "ðŸ”´ Test of \"catch the cat\" failed for \"$2\""
        echo "$(./ftc $1 "-ctc" $2)"
    else
        echo "âœ… Test of \"catch the cat\" succeeded (string: \"$2\")."
    fi
}

test_find_grep "arbre" "audience do pipoulapi" "arbre/sell/foreign.mp3"

function test_find_grep_nb () {
    if [ ! "$(./ftc $1 "-ctc" $2 | wc -l)" == "$(grep "-r" $1 $2 | wc -l)" ];
    then
        echo "ðŸ”´ Test of \"catch the cat\" failed for \"$2\""
        echo "$(./ftc $1 "-ctc" $2)"
    else
        echo "âœ… Test of \"catch the cat\" succeeded (string: \"$2\")."
    fi
}

test_find_grep "arbre" "Property current include"

function test_find_grep_regex () {
    if [ ! "$(./ftc $1 "-ctc" $2)"2>/dev/null == $3 ];
    then
        echo "ðŸ”´ Test of \"catch the cat\" with regex failed for \"$2\""
    else
        echo "âœ… Test of \"catch the cat\" with regex succeeded (regex: \"$2\")."
    fi
}

test_find_grep "arbre" "than star.*" "4"