#!/bin/bash

REQUIRED_FILE="./ftc"

if [ ! -f ${REQUIRED_FILE} ] 
then
    echo "‚ö†Ô∏è Executable ${REQUIRED_FILE} not found."
    exit 1
fi

function test_find_mime () {
    if [ ! "$(./ftc "$1" "-mime" "$2")" == $3 ];
    then
        echo "üî¥ Test of the mime type failed for type \"$2\""
        echo "$(./ftc "$1" "-mime" "$2")"
        exit 1
    else
        echo "‚úÖ Test of find with mime type succeeded (type: \"$2\")."
    fi
}


test_find_mime "arbre/economic/player/his/a/" "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" "arbre/economic/player/his/a/buy.xlsx"

function test_find_mime_nb() {
    if [ ! "$(./ftc "$1" "-mime" "$2" | wc -l)" == $3 ];
    then
       echo "üî¥ Test of the mime type failed for type \"$2\""
        echo "$(./ftc "$1" "-mime" "$2" | wc -l)"
        echo "$3"
        exit 1
    else
        echo "‚úÖ Test of find with mime type succeeded (type: \"$2\")."
    fi
}

test_find_mime_nb "arbre" "image/png" "     228"
